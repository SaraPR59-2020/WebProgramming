@model webProgramiranje.Models.Ispit

@{
    ViewBag.Title = "Kreiranje ispita";
}

<style>
    body {
        background-image: linear-gradient(135deg, #eeeee4 10%, #0e0700 100%);
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: "Open Sans", sans-serif;
        color: #333333;
    }
    .box-form {
        margin: auto;
        width: 100%;
        background: #FFFFFF;
        overflow: hidden;
        display: flex;
        flex: 1 1 100%;
        align-items: stretch;
        justify-content: space-between;
        box-shadow: 0 0 20px 6px #9f9c99;
    }

        .box-form div {
            height: auto;
        }

        .box-form .left {
            color: #FFFFFF;
            background-size: cover;
            background-repeat: no-repeat;
            background-image: url("https://wallpapercave.com/wp/ew0V5jf.jpg");
            overflow: hidden;
        }

            .box-form .left .overlay {
                padding: 30px;
                width: 100%;
                height: 100%;
                background: #9f9c99ad;
                overflow: hidden;
                box-sizing: border-box;
            }

                .box-form .left .overlay h1 {
                    font-size: 10vmax;
                    line-height: 1;
                    font-weight: 900;
                    margin-top: 40px;
                    margin-bottom: 20px;
                }

                .box-form .left .overlay span p {
                    margin-top: 30px;
                    font-weight: 900;
                }

                .box-form .left .overlay span a {
                    background: #3b5998;
                    color: #FFFFFF;
                    margin-top: 10px;
                    padding: 14px 40px;
                    border-radius: 100px;
                    display: inline-block;
                    box-shadow: 0 3px 6px 1px #042d4657;
                }

                    .box-form .left .overlay span a:last-child {
                        background: #1dcaff;
                        margin-left: 30px;
                    }

        .box-form .right {
            padding: 100px;
            overflow: hidden;
        }

            .box-form .right p {
                font-size: 14px;
                color: #B0B3B9;
            }

            .box-form .right .inputs {
                overflow: hidden;
            }

            .box-form .right input {
                width: 100%;
                padding: 1px;
                margin-top: 25px;
                font-size: 16px;
                border: none;
                outline: none;
                border-bottom: 2px solid #B0B3B9;
            }

        

    h2 {
        margin-top: 20px;
        margin-bottom: 30px;
        text-align: center;
        color: #2C3E50;
    }

    .form-group {
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
        .form-group label {
            width: 30%;
            text-align: right;
            padding-right: 15px;
        }

        .form-group input,
        .form-group select {
            flex: 1;
            border: 2px solid #B0B3B9;
            padding: 8px;
            border-radius: 3px;
        }

    input[type="submit"] {
        float: right;
        color: #fff;
        font-size: 16px;
        padding: 12px 35px;
        border-radius: 50px;
        display: inline-block;
        border: 0;
        outline: 0;
        background-image: linear-gradient(135deg, #B0B3B9 10%, #eeeee4 100%);
    }

        input[type="submit"]:hover {
            background-color: #2980b9;
            cursor: pointer;
        }

    .validation-error {
        color: #e74c3c;
        font-size: 12px;
    }
</style>
<div class="box-form">
    <div class="left">
        <div class="overlay">
            <h2>Kreiranje ispita</h2>
        </div>
    </div>
        <div class="right">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.Profesor)
                    @Html.TextBox("Profesor", Context.Session["Username"], new { @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Profesor, "", new { @class = "validation-error" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Predmet)
                    @Html.DropDownListFor(model => model.Predmet, (IEnumerable<SelectListItem>)ViewBag.Predmeti)
                    @Html.ValidationMessageFor(model => model.Predmet, "", new { @class = "validation-error" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DatumIVremeOdrzavanja)
                    @Html.TextBoxFor(model => model.DatumIVremeOdrzavanja, "{0:yyyy-MM-dd HH:mm}", new { @type = "datetime-local" })
                    @Html.ValidationMessageFor(model => model.DatumIVremeOdrzavanja, "", new { @class = "validation-error" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NazivUcionice)
                    @Html.EditorFor(model => model.NazivUcionice)
                    @Html.ValidationMessageFor(model => model.NazivUcionice, "", new { @class = "validation-error" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NazivIspitnogRoka)
                    @Html.EditorFor(model => model.NazivIspitnogRoka)
                    @Html.ValidationMessageFor(model => model.NazivIspitnogRoka, "", new { @class = "validation-error" })
                </div>

                <div class="form-group">
                    <input type="submit" class="sub" value="Kreiraj ispit" />
                </div>
            }
        </div>
<</div>