@model List<webProgramiranje.Models.RezultatIspita>

@{
    ViewBag.Title = "Ocenjivanje ispita";
}

<style>
    body {
        background-image: linear-gradient(135deg, #eeeee4 10%, #0e0700 100%);
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: "Open Sans", sans-serif;
        color: #333333;
    }

    .box-form {
        margin: auto;
        width: 100%;
        overflow: hidden;
        display: flex;
        flex: 1 1 100%;
        align-items: stretch;
        justify-content: space-between;
        box-shadow: 0 0 20px 6px #9f9c99;
    }

        .box-form .left {
            color: #FFFFFF;
            background-size: cover;
            background-repeat: no-repeat;
            background-image: url("https://wallpapercave.com/wp/ew0V5jf.jpg");
            overflow: hidden;
        }
            .box-form .left .overlay {
                padding: 30px;
                width: 100%;
                height: 100%;
                background: #9f9c99ad;
                overflow: hidden;
                box-sizing: border-box;
            }

                .box-form .left .overlay h1 {
                    font-size: 10vmax;
                    line-height: 1;
                    font-weight: 900;
                    margin-top: 40px;
                    margin-bottom: 20px;
                }

                .box-form .left .overlay span p {
                    margin-top: 30px;
                    font-weight: 900;
                }

                .box-form .left .overlay span a {
                    background: #3b5998;
                    color: #FFFFFF;
                    margin-top: 10px;
                    padding: 14px 40px;
                    border-radius: 100px;
                    display: inline-block;
                    box-shadow: 0 3px 6px 1px #042d4657;
                }

                    .box-form .left .overlay span a:last-child {
                        background: #1dcaff;
                        margin-left: 30px;
                    }
        .box-form .right {
            padding: 30px;
            width: 70%;
        }

    .alert {
        margin-bottom: 20px;
    }

    table {
        width: 90%;
        margin: 40px auto;
        background-color: #FFFFFF;
        border-radius: 10px;
        box-shadow: 0 0 20px 6px #9f9c99;
    }

    thead {
        background-color: #9f9c99;
    }

    th, td {
        padding: 10px 20px;
    }

    input[type="submit"] {
        float: right;
        color: #fff;
        font-size: 12px;
        padding: 8px 20px;
        border-radius: 20px;
        display: inline-block;
        border: 0;
        outline: 0;
        background-image: linear-gradient(135deg, #B0B3B9 10%, #eeeee4 100%);
    }

        input[type="submit"]:hover {
            background-color: #2c3e50;
        }
</style>

<div class="box-form">
    <div class="left">
        <div class="overlay"><h2>Ocenjivanje ispita</h2></div>
        
    </div>
    <div class="right">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <table class="table">
            <thead>
                <tr>
                    <th>Student Ime</th>
                    <th>Student Prezime</th>
                    <th>Ispit</th>
                    <th>Trenutna Ocena</th>
                    <th>Ocenjivanje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rezultat in Model)
                {
                    <tr>
                        <td>@rezultat.Student.Ime</td>
                        <td>@rezultat.Student.Prezime</td>
                        <td>@rezultat.Ispit.Predmet</td>
                        <td>@rezultat.Ocena</td>
                        <td>
                            <form action="/Profesor/OcenjivanjeIspita" method="post">
                                <input type="hidden" name="id" value="@rezultat.Ispit.Id" />
                                <select name="ocena">
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                </select>
                                <input type="submit" value="Oceni" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
