@model List<webProgramiranje.Models.Student>
<h2>Pregled studenata</h2>


<form method="post" action="@Url.Action("FilterAndSort")">
    Filtriraj po:
    <input type="text" name="imeFilter" placeholder="Ime" />
    <input type="text" name="prezimeFilter" placeholder="Prezime" />
    <input type="text" name="indeksFilter" placeholder="Broj indeksa" />

    Sortiraj po:
    <select name="sortCriteria">
        <option value="Ime">Ime</option>
        <option value="Prezime">Prezime</option>
        <option value="BrojIndeksa">Broj indeksa</option>
    </select>

    <select name="sortDirection">
        <option value="asc">Rastuće</option>
        <option value="desc">Opadajuće</option>
    </select>

    <button type="submit" class="btn btn-default">Primeni</button>
</form>
<a href="@Url.Action("CreateStudent")" class="btn btn-primary">Kreiraj studenta</a>
<table class="table">
    <thead>
        <tr>
            <th>Korisnicko ime</th>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Email</th>
            <th>Broj indeksa</th>
            <th>Datum Rodjenja</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.KorisnickoIme</td>
                <td>@student.Ime</td>
                <td>@student.Prezime</td>
                <td>@student.ElektronskaPosta</td>
                <td>@student.BrojIndeksa</td>
                <td>@student.DatumRodjenja.ToString("dd.MM.yyyy")</td>
                <td>
                    <a href="@Url.Action("EditStudent", new { username = student.KorisnickoIme })" class="btn btn-warning">Izmeni</a>
                    <a href="@Url.Action("DeleteStudent", new { username = student.KorisnickoIme })" class="btn btn-danger">Obriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>
